<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.notes" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/note_launcher"
        android:label="@string/app_name"
        android:name=".MyApplication"
        android:roundIcon="@mipmap/note_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity" android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddTodoActivity" android:theme="@style/AppTheme.NoActionBar" ></activity>
        <activity android:name=".UpdateActivity" android:theme="@style/AppTheme.NoActionBar" ></activity>
        <receiver android:name=".TaskAlarmBroadCastReciever" android:enabled="true"></receiver>
    </application>

</manifest>